# ============================================================
# CONFIGURATION WPWM - Who Play With Moonlight
# ============================================================
# EXEMPLE DE FICHIER .env
# Copiez ce fichier en .env et modifiez les valeurs
# cp .env.example .env

# ============================================================
# DEBUG MODE
# ============================================================
# False en production, True en développement
DEBUG=True

# ============================================================
# SECRET KEY (Django)
# ============================================================
# Générez une nouvelle clé en production !
SECRET_KEY=your-secret-key-here

# ============================================================
# ALLOWED HOSTS
# ============================================================
# Domaines autorisés pour accéder à l'application
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================
# DATABASE
# ============================================================
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# ============================================================
# STATIC FILES
# ============================================================
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# ============================================================
# INFORMATIONS DU SITE
# ============================================================
SITE_NAME=Who Play With Moonlight
SITE_TAGLINE=Elevage d'Husky Siberien
COPYRIGHT_YEAR=2025

# ============================================================
# COULEURS PERSONNALISEES
# ============================================================
PRIMARY_COLOR=#071D49
SECONDARY_COLOR=#050F2E

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ============================================================
# LANGUE ET TIMEZONE
# ============================================================
LANGUAGE_CODE=fr-fr
TIME_ZONE=Europe/Paris

# ============================================================
# SECURITY (Production)
# ============================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
